{
    "env": {
        "browser": true,
        "es6": true,
	"react-native/react-native": true
    },
    "extends": [
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
	"react-native"
    ],
    "parser": "babel-eslint",
    "rules": {
	"react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],

	"no-use-before-define": "warn",
    "no-undef": "warn",
    "global-require" : "warn",
    "no-shadow" : "warn"

    }
}
