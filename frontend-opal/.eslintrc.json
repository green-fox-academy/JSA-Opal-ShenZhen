{
    "env": {
        "browser": true,
        "es6": true,
        "react-native/react-native": true
    },
    "extends": [
        "airbnb",
        "prettier"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-native",
        "prettier"
    ],
    "rules": {
        "prettier/prettier": ["error"],
        "react/jsx-filename-extension": ["warn"],
        "no-use-before-define": ["warn"],
	"no-undef": ["warn"]
    }
}
